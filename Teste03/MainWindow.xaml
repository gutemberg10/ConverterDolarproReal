<Window x:Class="Teste03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teste03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="348">
    <Grid Margin="0,0,30,9">
        <Label x:Name="lblValorDolar" Content="Valor da Doação em dólares:" HorizontalAlignment="Left" Margin="85,39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtValorDolares" HorizontalAlignment="Left" Margin="85,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="btnConverter" Content="Converter para Reais" HorizontalAlignment="Left" Margin="85,193,0,0" VerticalAlignment="Top" Width="161" Click="btnConverter_Click"/>
        <Label x:Name="lblValorReais" Content="Contet deve ser apagado" HorizontalAlignment="Left" Margin="85,226,0,0" VerticalAlignment="Top" Width="161"/>
        <Label x:Name="lblVDolar" Content="Cotação do Dólar" HorizontalAlignment="Left" Margin="85,119,0,0" VerticalAlignment="Top" Width="161"/>
        <TextBox x:Name="txtVDolar" HorizontalAlignment="Left" Margin="85,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
    </Grid>
</Window>
